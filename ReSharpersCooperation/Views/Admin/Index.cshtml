@model IEnumerable<ReSharpersCooperation.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Creator
            </th>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
            <th>
                Stock
            </th>
            <th>
                Rating
            </th>
            <th>
                Active
            </th>
            <th>
                Deleted
            </th>
            <th>
                Create Date
            </th>
            <th>
                Last Modified
            </th>
            <th>
                Image
            </th>
            <th>
                Featured
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.UserName)
                </td>   
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDesc)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.ProductCategory)
                </td>
                <td>
                    @item.Price.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @item.CreatedDate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.ModifiedDate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <img class="img-fluid" width="150" src="@item.ProductImage" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFeatured)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-ProductNo="@item.ProductNo">Edit</a>
                    <br />
                    <a href="javascript:void(0)" class="btn btn-primary btn-sm details" productNo="@item.ProductNo">Details</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="ProductID" value="@item.ProductNo" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div id="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var ajaxCallURL = '/Admin/Details';
        $(function () {
            $(".details").click(function () {
                var $buttonClicked = $(this);

                var options = {
                    "backdrop": "static",
                    keyboard: true
                };

                var pn = $buttonClicked.attr('productNo');

                $.ajax({
                    type: "GET",
                    url: ajaxCallURL,
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    data: { 'productNo': pn },
                    success: function (data) {

                        $('#modal-body').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');
                    },
                    error: function () {
                        alert("Content load failed.");
                    }
                });
            });
            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });
    </script>
}
