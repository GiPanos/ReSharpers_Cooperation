@model ReSharpersCooperation.Models.OrdersViewModel.OrdersViewModel

@{
    ViewData["Title"] = "Checkout";
}
@if (Model.OutOfStock != null && Model.OutOfStock.Count != 0)
{
    foreach (var item in Model.OutOfStock)
    {
        <div class="text-danger">
            @item.ProductName is out of stock!
        </div>
    }
}
<p class="text-danger">@ViewData["Error"]</p>
<h2>Please, complete an address</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <input type="hidden" asp-for="TotalCost" />
            <input type="hidden" asp-for="CurrentBalance" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderName" class="control-label">Full name:</label>
                <input asp-for="OrderName" class="form-control" />
                <span asp-validation-for="OrderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address:</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Town/City:</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">County:</label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label">Postcode:</label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <select asp-for="PaymentMethod" class="form-control" onselect="yesnoCheck(this)" onclick="yesnoCheck(this)">
                    <option label="Select Payment Option"></option>
                    <option value="creditcard">Credit Card</option>
                    <option value="sitebalance">Site Balance</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <span asp-validation-for="Creditcard" class="text-danger"></span>
            <div id="ifYes" style="display: none;">
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline1"><i class="fa fa-cc-mastercard fa-3x"></i></label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline2"><i class="fa fa-cc-visa fa-3x"></i></label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline3" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline3"><i class="fa fa-cc-amex fa-3x"></i></label>
                </div>
                <div>
                    <label asp-for="Creditcard" class="control-label">Credit Card Number</label>
                    <input asp-for="Creditcard" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="expiry-month">Expiration Date</label>
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-xs-3">
                                <select class="form-control " name="expiry-month" id="expiry-month">
                                    <option >Month</option>
                                    <option value="01">Jan (01)</option>
                                    <option value="02">Feb (02)</option>
                                    <option value="03">Mar (03)</option>
                                    <option value="04">Apr (04)</option>
                                    <option value="05">May (05)</option>
                                    <option value="06">June (06)</option>
                                    <option value="07">July (07)</option>
                                    <option value="08">Aug (08)</option>
                                    <option value="09">Sep (09)</option>
                                    <option value="10">Oct (10)</option>
                                    <option value="11">Nov (11)</option>
                                    <option value="12">Dec (12)</option>
                                </select>
                            </div>
                            <div class="col-xs-3">
                                <select class="form-control" name="expiry-year">

                                    <option value="18">2018</option>
                                    <option value="19">2019</option>
                                    <option value="20">2020</option>
                                    <option value="21">2021</option>
                                    <option value="22">2022</option>
                                    <option value="23">2023</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="cvv">Card CVV</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="cvv" id="cvv">
                </div>

            </div>

            <p>Current Balance:@Model.CurrentBalance.ToString("C")</p>
            <p>Total Cost:@Model.TotalCost.ToString("C")</p>
            <div class="form-group">
                <input asp-action="Checkout" type="submit" value="Complete Order" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Product" asp-action="List">Back to List</a>
</div>

