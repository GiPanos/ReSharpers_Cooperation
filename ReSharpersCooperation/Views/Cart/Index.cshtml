@using ReSharpersCooperation.Models.CartViewModels
@model List<CartSummaryViewModel>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count > 0)
{
    <h2>My cart</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th></th>
                <th class="text-center">Quantity</th>
                <th class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ProductName

                    </td>
                    <td>
                        <img class="img-fluid" width="75" height="75" src="@item.ProductImage" />
                    </td>
                    <td class="text-center">


                        <div class="dropdown">
                            <button class="btn btn-info btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                X @item.Quantity
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @for (int i = 1; i <= item.Quantity && i < item.StockNo; i++)
                                {
                                    <a asp-controller="cart" asp-action="RemoveFromCart" asp-route-productNo="@item.ProductNo" asp-route-quantity="@(item.Quantity-i)" class="dropdown-item">@i</a>
                                }
                                @for (int i = item.Quantity + 1; i <= item.StockNo && i <= 10; i++)
                                {

                                    <a asp-controller="cart" asp-action="AddToCart" asp-route-productNo="@item.ProductNo" asp-route-quantity="@(i-item.Quantity)" class="dropdown-item">@i</a>
                                }

                            </div>
                        </div>
                        <a asp-controller="cart" asp-action="RemoveFromCart" asp-route-productNo="@item.ProductNo" asp-route-quantity="@(item.Quantity)"><i class="fa fa-times-circle fa-2x"></i></a>

                    </td>
                    <td class="text-right">
                        @((item.Quantity * item.Cost).ToString("C"))
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="font-weight-bold">
                <td></td>
                <td colspan="2" class="text-right">Total:</td>
                <td class="text-right">@ViewData["totalprice"].ToString() €</td>
            </tr>
        </tfoot>
    </table>
    <div class="text-right"><a class="btn btn-success" asp-controller="Orders" asp-action="Checkout">Checkout</a></div>
}
else
{
    <h2>Your Cart is Empty</h2>
}
@if (ViewBag.ReturnUrl != null)
{
    <div class="text-center">
        <a class="btn btn-primary" href="@ViewBag.ReturnUrl">Continue shopping</a>
    </div>
}
else
{
    <div class="text-center">
        <a class="btn btn-primary" asp-controller="Product" asp-action="List">Continue shopping</a>
    </div>
}


