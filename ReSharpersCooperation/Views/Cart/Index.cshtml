@using ReSharpersCooperation.Models.CartViewModels
@model List<CartSummaryViewModel>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count > 0)
{
    <h2>My cart</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th></th>
                <th class="text-center">Quantity</th>
                <th class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>
                        <img class="img-fluid" width="50" height="50" src="@item.ProductImage" />
                    </td>
                    <td class="text-center">
                        <a asp-controller="cart" asp-action="RemoveFromCart" asp-route-productNo="@item.ProductNo" class="btn btn-danger btn-sm">-1</a>
                        x @item.Quantity
                        Copy
                        <div class="dropdown show">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown link
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </div>
                    </td>
                    <td class="text-right">@(item.Quantity * item.Cost)</td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td colspan="2" class="text-right">Total:</td>
                <td class="text-right">@ViewData["totalprice"]</td>
            </tr>
        </tfoot>
    </table>
    <div class="text-center"><a class="btn btn-success" asp-controller="Orders" asp-action="Checkout">Checkout</a></div>
}
else
{
    <h2>Your Cart is Empty</h2>
}
@if (ViewBag.ReturnUrl != null)
{
    <div class="text-center">
        <a class="btn btn-primary" href="@ViewBag.ReturnUrl">Continue shopping</a>
    </div>
}
