@model Product

<section class="card m-1 p-1">
    <header class="bg-faded p-1">
        <h3>
            @Model.ProductName
            <span class="badge badge-primary" style="float:right">
                <small>@Model.Price.ToString("C")</small>
            </span>
        </h3>
    </header>
    <div class="card-text card-body p-1">
        <div class="card-body row">
            @*<img class="img-fluid col-5 " src="~/images/@Model.ProductImage" />*@
            <p class="offset-3"style="float:right">@Model.ProductDesc</p>
        </div>
        <a class="btn btn-success btn-sm" style="float:right" asp-controller="WishList" asp-action="AddToWishList" asp-route-productID="@Model.ProductNo" asp-route-returnUrl="@ViewContext.HttpContext.Request.Path.ToString()">Add to Wish List</a>
        @if (Model.StockNo > 0)
        {
        <a class="btn btn-success btn-sm" style="float:right" asp-controller="Cart" asp-action="AddToCart" asp-route-productID="@Model.ProductNo" asp-route-returnUrl="@ViewContext.HttpContext.Request.Path.ToString()">Add to cart</a>
        }
        else
        {
            <button class="btn btn-danger btn-sm" style ="float:right" disabled>Out of Stock</button>
        }
    </div>
</section>