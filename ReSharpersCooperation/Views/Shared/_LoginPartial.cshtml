@using Microsoft.AspNetCore.Identity
@using ReSharpersCooperation.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="ViewCart" title="Cart"><span class="fa fa-shopping-cart" aria-hidden="true"> (0)</span> </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="ViewWishList" title="Wish List"><span class="fa fa-heart" aria-hidden="true"> (0)</span> </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Checkout" title="Checkout"><span class="fa fa-credit-card" aria-hidden="true"></span> </a>
            </li>
            <li class="nav-item dropdown">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                   aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i> @UserManager.GetUserName(User) </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="btn navbar-btn dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index" title="Edit your Account">My Account </a>
                    <a class="btn btn-link navbar-btn navbar-link dropdown-item" asp-area="" asp-controller="Manage" asp-action="ViewOrders" title="View your Past Orders">My Orders </a>
                    <div></div>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                </div>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
